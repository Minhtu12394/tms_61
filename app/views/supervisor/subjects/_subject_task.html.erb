<div class="card">
  <h3 class="flow-text center-align">
    <%= t "view.supervisor.subject.show.tasks" %>
  </h3>
  <table id="mytable" class="table table-bordred table-striped">
    <thead>
      <th><%= t "view.supervisor.subject.show.name" %></th>
    </thead>
    <tbody>
      <%= render(partial: "task", collection: @tasks, as: :task) || t("view.supervisor
        .subject.show.no_task_display") %>
    </tbody>
  </table>
</div>

<%= paginate @tasks %>
