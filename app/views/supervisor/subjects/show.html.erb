<div class="container">
  <div class="row" id="show-subject">
    <div class="col-md-4">
      <div class="panel panel-primary" id="panel-subject-show">
        <div class="panel-heading">
          <h2 class="flow-text center-align">
            <%= @subject.name %>
          </h2>
        </div>
        <div class="panel-body">
          <%= @subject.description %>
        </div>
      </div>
    </div>
    <div class="col-md-8">
      <div class="row">
        <h3 class="flow-text center-align">
          <%= t "view.supervisor.subject.show.tasks" %>
        </h3>
      </div>
      </br>
      <div class="row">
        <%= render "subject_task" %>
      </div>
    </div>
  </div>
</div>
