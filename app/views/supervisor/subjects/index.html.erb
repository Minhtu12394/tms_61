<div class="container card">
  <div class="row">
    <div class="col-md-12">
      <h2><%= t "view.supervisor.subject.index.list_all_subject" %></h2>
      </br>
      <div class="table-responsive">
        <%= link_to t("view.supervisor.subject.index.add_new_subject"),
          new_supervisor_subject_path, class: "btn btn-primary" %>
        </br>
        </br>
        <div>
          <%= search_form_for [:supervisor, @search], class: "form-inline" do |f| %>
            <%= f.label :name_cont, t("view.search_user.label_name") %>
            <%= f.text_field :name_cont, placeholder: t("view.search_subject.name"),
              class: "form-control search_select" %>
            <%= f.submit t("view.search"), class: "btn btn-info margin_left_btn_submit" %>
          <% end %>
        </div>
        </br>
        <table id="mytable" class="table table-bordred table-striped">
          <thead>
            <th><%= sort_link @search, :name, t("view.supervisor.subject.index.name") %></th>
            <th><%= sort_link @search, :description,
              t("view.supervisor.subject.index.description") %></th>
            <th><%= sort_link @search, :duration,
              t("view.supervisor.subject.index.duration") %></th>
            <th></th>
            <th><%= t "view.supervisor.subject.index.action" %></th>
            <th></th>
          </thead>
          <tbody>
            <%= render(partial: "subject", collection: @subjects, as: :subject) || t("view
              .supervisor.subject.index.no_subject_display") %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <%= paginate @subjects %>
</div>
