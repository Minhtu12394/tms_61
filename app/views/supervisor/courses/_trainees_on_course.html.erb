<div class="card">
  <div class="table-responsive">
    <h3><%= t "view.supervisor.course.show.trainees_on_course" %></h3>
    <table class="table table-bordred table-striped">
      <thead>
        <th><%= t "view.supervisor.user.index.name" %></th>
        <th><%= t "view.supervisor.user.index.email" %></th>
      </thead>
      <tbody>
        <% trainees.each do |trainee| %>
          <tr>
            <td><%= link_to trainee.name, "#" %></td>
            <td><%= trainee.email %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= paginate trainees, param_name: Settings.user.trainee_param,
    params: {current_tab: "trainees"} %>
</div>
