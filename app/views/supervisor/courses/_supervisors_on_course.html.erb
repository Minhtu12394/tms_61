<div class="card">
  <div class="table-responsive">
    <h3><%= t "view.supervisor.course.show.supervisors_on_course" %></h3>
    <%= link_to t("view.supervisor.course.show.add_supervisor_to_course"),
      edit_supervisor_course_supervisor_courses_path(@course),
      class: "btn btn-primary" unless @course.closed? %>
    <table class="table table-bordred table-striped">
      <thead>
        <th><%= t "view.supervisor.user.index.name" %></th>
        <th><%= t "view.supervisor.user.index.email" %></th>
      </thead>
      <tbody>
        <% supervisors.each do |supervisor| %>
          <tr>
            <td><%= link_to supervisor.name, "#" %></td>
            <td><%= supervisor.email %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= paginate supervisors, param_name: Settings.user.supervisor_param,
    params: {current_tab: "supervisors"} %>
</div>
