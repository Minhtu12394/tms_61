<div class="card">
  <%= form_for @course, url: supervisor_course_supervisor_courses_path do |f| %>
    <div class="table-responsive">
      <h3><%= t "view.supervisor.course.show.supervisors_on_course" %></h3>
      <table class="table table-bordred table-striped">
        <thead>
          <th><%= t "view.supervisor.user.index.name" %></th>
          <th><%= t "view.supervisor.user.index.email" %></th>
        </thead>
        <tbody>
          <%= f.collection_check_boxes :user_ids,
            @users, :id, :name, include_hidden: false do |user| %>
            <tr>
              <%= user.label class:"label-checkbox" do %>
                <td><%= user.check_box %></td>
                <td><%= user.object.name %></td>
                <td><%= user.object.email %></td>
              <% end %>
            </tr>
          <% end %>
          <%= f.submit t("view.supervisor.assign_trainee.save"),
            class: "btn btn-primary" %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
